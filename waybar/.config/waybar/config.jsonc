  "custom/spacer2": {
    "format": "ÓÇæ",
    "tooltip": false
  },
  "custom/spacer3": {
    "format": "ÓÇæ",
    "tooltip": false
  },
  "custom/spacer4": {
    "format": "ÓÇæ",
    "tooltip": false
  },
  "custom/spacer5": {
    "format": "ÓÇ∫",
    "tooltip": false
  },
  "custom/spacer6": {
    "format": "ÓÇº",
